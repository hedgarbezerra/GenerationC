@model GenerationC.Login

@{
    ViewBag.Title = "Login";
}
<div class="container">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-row justify-content-center">
        <div class="form-group col-md-3 text-center">

            @Html.LabelFor(model => model.Username)
            <div class="input-group mx-auto mb-3">

                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control text-center", placeholder = "Your username"} })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

            </div>
        </div>
    </div>

    <div class="form-row justify-content-center">
        <div class="form-group col-md-3 text-center">

            @Html.LabelFor(model => model.Password)
            <div class="input-group mx-auto mb-3">

                @Html.PasswordFor(model => model.Password, new { @class = "form-control text-center", placeholder = "We'll keep it secret" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                @Html.ValidationMessage("Authentication error", new { @class = "text-danger" })
            </div>
        </div>
    </div>

   

    <div class="form-row justify-content-center">
        <div class="form-group col-md-3 text-center">
            <input type="submit" value="Login" class="btn btn-lg btn-outline-primary" />
        </div>
    </div>

}
    </div>
